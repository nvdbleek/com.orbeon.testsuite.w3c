<?xml version="1.0" encoding="UTF-8"?>
<test-case xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.w3c.org/MarkUp/Forms/XForms/Test/Runner"
           xmlns:xf="http://www.w3.org/2002/xforms"
           xsi:schemaLocation="http://www.w3c.org/MarkUp/Forms/XForms/Test/Runner ../test-case.xsd">
	<open href="Chapt02/2.4.a.xhtml"/>
	<assert-title title="2.4.a Example: Multiple Forms"/>
	<assert-selection-options locator="xf-select1-1" options="Cash,Credit" />
	<assert-control-present locator="xf-input-1" type="input" />
	<assert-control-present locator="xf-input-2" type="input" />
	<select-option locator="xf-select1-1" option="Cash"/>
	<assert-control-not-present locator="xf-input-1" type="input" />
	<assert-control-not-present locator="xf-input-2" type="input" />
	<click locator="xf-submit-1" />
	<wait-for-page-to-load />
	<assert-title title="Results from echo.sh" />
	<assert-text-present text="method=&quot;cash&quot;" />
	<assert-text-not-present text="&lt;number" />
	<assert-text-not-present text="&lt;expiry" />
	<assert-text-not-present text="helpful" />
	
	<open href="Chapt02/2.4.a.xhtml"/>
	<assert-title title="2.4.a Example: Multiple Forms"/>
	<type-input locator="xf-input-1" value="4012888888881881" />
	<type-input locator="xf-input-2" value="2001" />
	<click locator="xf-submit-1" />
	<assert-control-invalid locator="xf-input-2"/>
	<type-input locator="xf-input-2" value="2001-08" />
	<click locator="xf-submit-1" />
	<wait-for-page-to-load />
	<assert-title title="Results from echo.sh" />
	<assert-text-present text="method=&quot;cc&quot;" />
	<assert-text-present text="&lt;number&gt;4012888888881881&lt;/number&gt;" />
	<assert-text-present text="&lt;expiry&gt;2001-08&lt;/expiry&gt;" /> 
	<assert-text-not-present text="helpful" />
	
	<open href="Chapt02/2.4.a.xhtml"/>
	<assert-title title="2.4.a Example: Multiple Forms"/>
	<assert-selection-options locator="xf-select1-2" options="Not at all helpful (0),Barely helpful (1),Somewhat helpful (2),Very helpful (3)" />
	<click locator="xf-submit-2" />
	<wait-for-page-to-load />
	<assert-title title="Results from echo.sh" />
	<assert-text-present text="&lt;helpful&gt;3&lt;/helpful&gt;" />
	<assert-text-not-present text="method" />
	
</test-case>